{
  "manifest_version": 2,
  "name": "Web Blocker - Filter",
  "version": "2.0",
  "description": "Blokir situs pornografi & judi langsung dari browser dengan notifikasi, auto-update blocklist, dan statistik.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
